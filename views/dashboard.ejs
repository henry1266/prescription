<script>
        function goToDailyChart(date) {
        const url = `http://192.168.68.79:3001/customer-time-chart?predate=${date}`;
        window.location.href = url;
        }
        function goToPreviousMonth() {
            const currentUrl = window.location.href;
            const match = currentUrl.match(/dashboard\/(\d{4})\/(\d{1,2})/);
            if (match) {
                const currentYear = parseInt(match[1], 10);
                const currentMonth = parseInt(match[2], 10);
                let prevYear = currentYear;
                let prevMonth = currentMonth - 1;
                if (prevMonth < 1) {
                    prevMonth = 12;
                    prevYear -= 1;
                }
                const prevUrl = `http://192.168.68.79:3001/dashboard/${prevYear}/${prevMonth}`;
                window.location.href = prevUrl;
            } else {
                alert("URL 格式不正確，無法計算上一個月。");
            }
        }

        function goToNextMonth() {
            const currentUrl = window.location.href;
            const match = currentUrl.match(/dashboard\/(\d{4})\/(\d{1,2})/);
            if (match) {
                const currentYear = parseInt(match[1], 10);
                const currentMonth = parseInt(match[2], 10);
                let nextYear = currentYear;
                let nextMonth = currentMonth + 1;
                if (nextMonth > 12) {
                    nextMonth = 1;
                    nextYear += 1;
                }
                const nextUrl = `http://192.168.68.79:3001/dashboard/${nextYear}/${nextMonth}`;
                window.location.href = nextUrl;
            } else {
                alert("URL 格式不正確，無法計算下一個月。");
            }
        }

        function goToDailyChart(date) {
            const url = `http://192.168.68.79:3001/calculate?startdate=${date}&enddate=${date}`;
            window.location.href = url;
        }
    </script>



