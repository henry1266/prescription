    <style>
        /* 自定義樣式 */
        body {
            background-color: #1a1a2e; /* 深色背景 */
            color: #ffffff; /* 字體顏色 */
        }
        
        .charts-wrapper {
            position: fixed;
            right: 3rem;
            width: 24rem;
            top: 21rem; /* 距離頁面頂部 10px */
            height: 15rem; /* 圖表高度 */
            color: 'white';
        }
        

        .fixed-chart {
      position: fixed;
      top: 5rem; /* 距離頁面頂部 10px */
      right: 3rem;
      width: 24rem; /* 圖表寬度 */
      height: 15rem; /* 圖表高度 */
    }

    /* 美化日曆表格 */
    .calendar {
        width: 90%;
        max-width: 35rem;
        margin-left: 3rem;
        margin-top: 1rem;
        border-collapse: collapse;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.0);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
        position: fixed;
    }

    /* 表格標題行 */
    th {
        background-color: rgba(75, 192, 192, 0.5);
        color: #fff;
        font-weight: bold;
        padding: 9px;
    }

    /* 空白單元格樣式 */
    .empty {
        background-color: rgba(255, 255, 255, 0.3);
        border: 1px solid #ddd;
    }

    
    /* 值文字樣式 */
    .count {
        font-size: 1.1rem;
        font-weight: bold;
        color: rgba(255, 255, 255, 0.8);
    }
    .count:hover {
        color: rgba(75, 192, 192, 1);
        font-size: 1.1rem;
    }

    /* 偶數行背景顏色 */
    tr:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.15);
    }

    /* 表格邊框樣式 */
    th, td {
        border: 1px solid #ddd;
    }

    
    /* 單元格樣式 */
    .day-cell {
        padding: 7px;
        border: 1px solid #ddd;
        vertical-align: top;
        transition: background-color 0.3s ease;
    }
    .day-cell:hover {
    background-color: #f1f8e9; /* 浅绿色背景 */
    }
    .day-cell:hover,
    .day-cell:hover .day,
    .day-cell:hover .count {
        color: #000000; /* 包括子元素在悬停时的字体颜色 */
    }

    /* 日期文字樣式 */
    .day {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
    }

    /* 凸顯今天的單元格樣式 */
    .day-cell.today {
        background-color: rgba(75, 192, 192, 0.7); /* 金黃色背景 */
        border: 2px solid #FFA500; /* 橙色邊框 */
        font-weight: bold;
    }
    /* 按钮样式 */
        .month-buttons {
            display: flex;
            justify-content: center;
            margin-top: 28.3rem;
            margin-right: 16rem;
        }
        .month-buttons button {
            background-color: #5C9EAD;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 0.2rem 18px;
            cursor: pointer;
            font-size: 1rem;
            margin: 0 10px;
            z-index: 1000; /* 設置一個較高的數值 */
        }
        .month-buttons button:hover {
            background-color: #487C8A;
        }
</style>
